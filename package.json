{
  "name": "myhomegames-server",
  "version": "0.1.3",
  "license": "Apache-2.0",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "node scripts/build-app.js",
    "release": "release-it --no-increment"
  },
  "pkg": {
    "assets": [
      "routes/**/*",
      "utils/**/*"
    ],
    "targets": [
      "node18-macos-x64"
    ],
    "outputPath": "build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "pkg": "^5.8.1",
    "release-it": "^17.0.0",
    "supertest": "^7.1.4"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "${version}",
      "tag": true,
      "requireCleanWorkingDir": false,
      "requireUpstream": false
    },
    "github": {
      "release": true,
      "releaseName": "${version}",
      "assets": [
        "build/MyHomeGames-${version}.pkg"
      ]
    },
    "npm": {
      "publish": false,
      "version": false
    },
    "hooks": {
      "before:release": [
        "npm run build"
      ]
    }
  }
}
